<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5E5"
        tools:context=".fragment.AccountInfoRequestFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/Padding_Size_24"
                    android:layout_height="@dimen/Padding_Size_24"
                    android:layout_margin="@dimen/Padding_Size_16"
                    android:src="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="@+id/tvSettings"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvSettings" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/Padding_Size_4"
                    android:layout_marginVertical="@dimen/Padding_Size_12"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"

                    android:text="Account"
                    android:textColor="@color/light_purple"
                    android:textSize="@dimen/Size_Sp_16"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivBack"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/Padding_Size_16"
                    android:layout_marginVertical="@dimen/Padding_Size_12"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="      Request account info"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Size_Sp_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="@dimen/Padding_Size_100"
            android:layout_height="@dimen/Padding_Size_100"
            android:layout_marginTop="@dimen/Padding_Size_40"
            android:src="@drawable/ic_pad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvCard1" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/Padding_Size_24"
            android:layout_marginVertical="@dimen/Padding_Size_32"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/roboto"
            android:gravity="center|left"
            android:text="@string/create"
            android:textColor="@color/black"
            android:textSize="@dimen/Size_Sp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView" />

        <View
            android:id="@+id/view12"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginVertical="@dimen/Padding_Size_16"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/tvCreate" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRequest"
            android:layout_width="@dimen/Padding_Size_44"
            android:layout_height="@dimen/Padding_Size_44"
            android:layout_marginTop="@dimen/Padding_Size_16"
            android:src="@drawable/ic_pad"
            android:layout_marginStart="@dimen/Padding_Size_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view12" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/Padding_Size_4"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"

            android:text="Request sent"
            android:textColor="@color/black"
            android:textSize="@dimen/Size_Sp_14"
            app:layout_constraintStart_toEndOf="@+id/ivRequest"
            app:layout_constraintTop_toTopOf="@+id/ivRequest" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReady"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/Padding_Size_4"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"

            android:text="Ready by 2 September 2021"
            android:textColor="@color/xyz"
            android:textSize="@dimen/Size_Sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/ivRequest"
            app:layout_constraintStart_toEndOf="@+id/ivRequest" />

        <View
            android:id="@+id/view13"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginVertical="@dimen/Padding_Size_16"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/tvReady" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInfo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/Padding_Size_24"
            android:layout_marginVertical="@dimen/Padding_Size_32"
            android:fontFamily="@font/roboto"
            android:gravity="center|left"
            android:text="Your report will be ready in about 3 days. You’ll have a few weeks to download your report after it’s available."
            android:textColor="@color/xyz"
            android:textSize="@dimen/Size_Sp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/Padding_Size_24"
            android:layout_marginVertical="@dimen/Padding_Size_32"
            android:fontFamily="@font/roboto"
            android:gravity="center|left"
            android:text="Your request will be canceled if you make changes to your account such as changing your number or deleting your account"
            android:textColor="@color/xyz"
            android:textSize="@dimen/Size_Sp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvInfo1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>