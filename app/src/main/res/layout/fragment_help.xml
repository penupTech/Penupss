<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Setting_color"
        tools:context=".fragment.HelpFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/Padding_Size_24"
                    android:layout_height="@dimen/Padding_Size_24"
                    android:layout_margin="@dimen/Padding_Size_16"
                    android:src="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="@+id/tvSettings"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvSettings" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/Padding_Size_16"
                    android:layout_marginVertical="@dimen/Padding_Size_12"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="Settings"
                    android:textColor="@color/light_purple"
                    android:textSize="@dimen/Size_Sp_16"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivBack"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/Padding_Size_16"
                    android:layout_marginVertical="@dimen/Padding_Size_12"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Help"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Size_Sp_20"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/ivBack"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cvCard1">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/Padding_Size_16"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/Padding_Size_8"
                android:src="@drawable/ic_help_banner"
                android:layout_height="300dp">

            </androidx.appcompat.widget.AppCompatImageView>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/layout1">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/Padding_Size_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutHelp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/Padding_Size_16"
                    android:layout_marginVertical="@dimen/Padding_Size_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivHelp"
                        android:layout_width="@dimen/Padding_Size_32"
                        android:layout_height="@dimen/Padding_Size_32"
                        android:layout_gravity="left|center"

                        android:src="@drawable/ic_baseline_wallpaper_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/Padding_Size_16"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center|left"
                        android:text="Help Centre"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Size_Sp_14"
                        app:layout_constraintStart_toEndOf="@+id/ivHelp"
                        app:layout_constraintTop_toTopOf="@+id/ivHelp" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivHelpForward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center|left"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:text="5:22 pm"
                        android:textColor="@color/unknown"
                        android:textSize="@dimen/Size_Sp_12"
                        android:tint="@color/light_purple"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_marginStart="@dimen/Padding_Size_50"
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivHelp"
                        app:layout_constraintTop_toBottomOf="@+id/ivHelp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutContacts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/Padding_Size_16"
                    android:layout_marginVertical="@dimen/Padding_Size_8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutHelp"
                    tools:layout_editor_absoluteX="16dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivContact"
                        android:layout_width="@dimen/Padding_Size_32"
                        android:layout_height="@dimen/Padding_Size_32"
                        android:layout_gravity="left|center"

                        android:src="@drawable/ic_baseline_wallpaper_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/Padding_Size_16"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center|left"
                        android:text="Contact us"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Size_Sp_14"
                        app:layout_constraintStart_toEndOf="@+id/ivContact"
                        app:layout_constraintTop_toTopOf="@+id/ivContact" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivContactForward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center|left"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:text="5:22 pm"
                        android:textColor="@color/unknown"
                        android:textSize="@dimen/Size_Sp_12"
                        android:tint="@color/light_purple"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvCard3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/Padding_Size_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvCard2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutTerms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/Padding_Size_16"
                    android:layout_marginVertical="@dimen/Padding_Size_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivTerms"
                        android:layout_width="@dimen/Padding_Size_32"
                        android:layout_height="@dimen/Padding_Size_32"
                        android:layout_gravity="left|center"

                        android:src="@drawable/ic_baseline_wallpaper_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/Padding_Size_16"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center|left"
                        android:text="Terms and Privacy Policy"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Size_Sp_14"
                        app:layout_constraintStart_toEndOf="@+id/ivTerms"
                        app:layout_constraintTop_toTopOf="@+id/ivTerms" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivTermsForward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center|left"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:text="5:22 pm"
                        android:textColor="@color/unknown"
                        android:textSize="@dimen/Size_Sp_12"
                        android:tint="@color/light_purple"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_marginStart="@dimen/Padding_Size_50"
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivTerms"
                        app:layout_constraintTop_toBottomOf="@+id/ivTerms" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutLicenses"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/Padding_Size_16"
                    android:layout_marginVertical="@dimen/Padding_Size_8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutTerms"
                    tools:layout_editor_absoluteX="16dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivLicenses"
                        android:layout_width="@dimen/Padding_Size_32"
                        android:layout_height="@dimen/Padding_Size_32"
                        android:layout_gravity="left|center"

                        android:src="@drawable/ic_baseline_wallpaper_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLicenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/Padding_Size_16"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center|left"
                        android:text="Licenses"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Size_Sp_14"
                        app:layout_constraintStart_toEndOf="@+id/ivLicenses"
                        app:layout_constraintTop_toTopOf="@+id/ivLicenses" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivLicensesForward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center|left"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:text="5:22 pm"
                        android:textColor="@color/unknown"
                        android:textSize="@dimen/Size_Sp_12"
                        android:tint="@color/light_purple"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSKYTALKIES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/Padding_Size_16"
            android:layout_marginVertical="@dimen/Padding_Size_16"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="© SKYTALKIES PVT. LTD. 2021"
            android:textColor="@color/black"
            android:textSize="@dimen/Size_Sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvCard3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/Padding_Size_32"
            android:layout_marginVertical="@dimen/Padding_Size_4"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="version 2.21.161.1"
            android:textColor="@color/black"
            android:textSize="@dimen/Size_Sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSKYTALKIES" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>